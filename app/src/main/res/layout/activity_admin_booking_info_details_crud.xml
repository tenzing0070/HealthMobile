<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_appoint"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E8449">

            <TextView
                android:id="@+id/doc_appoint_Specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" Specialist"
                android:textSize="18sp"
                android:padding="16dp"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/tv9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@id/doc_appoint_Specialist"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/appoint_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/tv9"
                android:layout_toRightOf="@+id/doc_appoint_Specialist"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Time:"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/tv9"
                android:layout_marginLeft="80dp"/>

            <TextView
                android:id="@+id/appoint_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Time"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/tv10"
                android:layout_toRightOf="@+id/tv9"
                android:layout_marginLeft="80dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfileDocAppoint"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:src="@drawable/doctor"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_layout_appoint">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="Doctor"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/doc_appoint_Fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:textSize="15sp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/tv1"
                android:textColor="@color/colorRed"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/doc_appoint_Lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" Last Name"
                android:textSize="15sp"
                android:layout_marginTop="0dp"
                android:textColor="@color/colorRed"
                android:layout_below="@+id/doc_appoint_Fname"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/tv1"
                android:layout_toRightOf="@id/tv1"
                android:layout_marginLeft="80dp"
                android:text=" Gender"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/doc_appoint_Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:hint=" Gender"
                android:textSize="15sp"
                android:layout_below="@+id/tv4"
                android:layout_toRightOf="@+id/tv1"
                android:layout_marginLeft="85dp"
                android:textColor="@color/colorRed"/>

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:layout_toEndOf="@id/tv4"
                android:layout_toRightOf="@id/tv4"
                android:text=" Service Charge"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/doc_appoint_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@id/tv4"
                android:layout_toRightOf="@id/tv4"
                android:hint=" Price"
                android:textSize="15sp"
                android:layout_below="@+id/tv5"
                android:textColor="@color/colorRed"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="10dp"
                android:background="#000000"
                android:layout_marginBottom="0dp"/>


            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Patients \nUsername"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/doc_appoint_Lname"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/user_appoint_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Username"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tv6"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Purpose"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/tv6"
                android:layout_below="@+id/doc_appoint_Gender"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="100dp"/>

            <TextView
                android:id="@+id/appoint_Purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Purpose"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/tv6"
                android:layout_below="@+id/tv11"
                android:layout_marginLeft="100dp"
                android:textColor="@color/colorBlue"/>

            <ImageView
                android:id="@+id/imgBookingDelete"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:background="@drawable/delete"
                android:layout_toRightOf="@+id/tv11"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="130dp"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

