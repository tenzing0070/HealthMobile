<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_adminuserinfo"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRed">

            <TextView
                android:id="@+id/user_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" Username"
                android:textSize="18sp"
                android:padding="16dp"
                android:textColor="@color/colorWhite"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imguserimage"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:src="@drawable/doctor"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_layout_adminuserdetails">

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/user_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Firstname"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tv6"
                android:textColor="@color/colorRed"/>

            <TextView
                android:id="@+id/user_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Lastname"
                android:textSize="15sp"
                android:textColor="@color/colorRed"
                android:layout_below="@+id/user_firstname"
                android:layout_marginLeft="5dp" />


            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="Age"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/tv6"/>

            <TextView
                android:id="@+id/user_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:textSize="15sp"
                android:layout_marginTop="0dp"
                android:textColor="@color/colorRed"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/tv1"
                android:layout_toRightOf="@+id/tv6"/>


            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/tv1"
                android:layout_toRightOf="@id/tv1"
                android:layout_marginLeft="60dp"
                android:text=" Gender"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/user_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:hint=" Gender"
                android:textSize="15sp"
                android:layout_below="@+id/tv4"
                android:layout_toRightOf="@+id/tv1"
                android:layout_marginLeft="65dp"
                android:textColor="@color/colorRed"/>

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_toEndOf="@id/tv4"
                android:layout_toRightOf="@id/tv4"
                android:text=" Address"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@id/tv4"
                android:layout_toRightOf="@id/tv4"
                android:hint=" Address"
                android:textSize="15sp"
                android:layout_below="@+id/tv5"
                android:textColor="@color/colorRed"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="10dp"
                android:background="#000000"
                android:layout_marginBottom="0dp"/>




            <TextView
                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phone"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/tv10"
                android:layout_below="@+id/user_lastname"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="140dp"/>

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Phone"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/tv10"
                android:layout_below="@+id/tv11"
                android:layout_marginLeft="140dp"
                android:textColor="@color/colorRed"/>

            <ImageView
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:background="@drawable/delete"
                android:layout_toRightOf="@+id/tv11"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="100dp"
                />


            <TextView
                android:id="@+id/tv10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Email:"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/user_lastname"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="15sp"
                android:textColor="@color/colorRed"
                android:layout_below="@+id/tv10"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

