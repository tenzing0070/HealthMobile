<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".Quiz.QuizDashActivity"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imghome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/homefragment"
        android:onClick="UserDashOpen" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/quizimage"
        android:layout_width="278dp"
        android:layout_height="365dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/quizknowledge"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/tex_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/quizimage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Highscore:0"
        android:textSize="50sp"
        android:textColor="@color/colorRed"
        android:fontFamily="serif"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/button_start_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Start Quiz"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:background="@drawable/quiz_start_button"
        android:layout_below="@+id/tex_view_highscore"
        android:layout_marginTop="50dp"/>

</RelativeLayout>