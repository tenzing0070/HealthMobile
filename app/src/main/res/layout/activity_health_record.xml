<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".UpdateHealthRecordActivity"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Health Record"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorRed"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="3dp"
        android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvhealthrecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">

    <RelativeLayout
        android:id="@+id/rlhealthrecord"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfilee"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/tvfirstname"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:text="First Name"
            android:textColor="@color/colorRed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtfirstname"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvfirstname"
            android:layout_toRightOf="@+id/tvfirstname"
            android:hint="First Name"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvlastname"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtfirstname"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:text="Last Name"
            android:textColor="@color/colorRed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtlastname"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvlastname"
            android:layout_toRightOf="@+id/tvlastname"
            android:layout_below="@id/txtfirstname"
            android:hint="Last Name"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvage"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/txtlastname"
            android:text="Age"
            android:textSize="15sp"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/txtage"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvage"
            android:layout_toRightOf="@+id/tvage"
            android:layout_below="@id/txtlastname"
            android:hint="Age"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvaddress"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/tvage"
            android:text="Address"
            android:textSize="15sp"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/txtaddress"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvaddress"
            android:layout_toRightOf="@+id/tvaddress"
            android:layout_below="@id/txtage"
            android:hint="Address"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvphone"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/tvaddress"
            android:text="Phone No"
            android:textSize="15sp"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/txtphone"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvphone"
            android:layout_toRightOf="@+id/tvphone"
            android:layout_below="@id/txtaddress"
            android:hint="Phone"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvgender"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/tvphone"
            android:text="Gender"
            android:textSize="15sp"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/txtgender"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvgender"
            android:layout_toRightOf="@+id/tvgender"
            android:layout_below="@id/txtphone"
            android:hint="Gender"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvemail"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/tvgender"
            android:text="Email"
            android:textSize="15sp"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/txtemail"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvemail"
            android:layout_toRightOf="@+id/tvemail"
            android:layout_below="@id/txtgender"
            android:hint="Email"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvweight1"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/tvemail"
            android:text="Weight(kg)"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/txtweight1"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvweight1"
            android:layout_toRightOf="@+id/tvweight1"
            android:layout_below="@id/txtemail"
            android:hint="Height(cm)"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvheight1"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/tvweight1"
            android:text="Weight"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/txtheight1"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvheight1"
            android:layout_toRightOf="@+id/tvheight1"
            android:layout_below="@id/txtweight1"
            android:hint="Height"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvbloodgroup1"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/tvheight1"
            android:text="Blood Type"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/txtbloodgroup1"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvbloodgroup1"
            android:layout_toRightOf="@+id/tvbloodgroup1"
            android:layout_below="@id/txtheight1"
            android:hint="Blood Type"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#000000"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15px"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:rowCount="3">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="0"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/weight"
                />

            <TextView
                android:id="@+id/tvweight"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/imgProfile"
                android:layout_toRightOf="@+id/imgProfile"
                android:text="Weight\n(kg)"
                android:textSize="15sp"
                android:textColor="@color/colorBlue" />

            <EditText
                android:id="@+id/txtweight"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tvfirstname"
                android:layout_toRightOf="@+id/tvfirstname"
                android:hint="Weight"
                android:inputType="numberDecimal"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:src="@drawable/height" />

                <TextView
                    android:id="@+id/tvheight"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/imgProfile"
                    android:layout_toRightOf="@+id/imgProfile"
                    android:text="Height\n(cm)"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlue" />

                <EditText
                    android:id="@+id/txtheight"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tvfirstname"
                    android:layout_toRightOf="@+id/tvfirstname"
                    android:hint="Height"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:src="@drawable/blood" />

                <TextView
                    android:id="@+id/tvbloodgroup"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/imgProfile"
                    android:layout_toRightOf="@+id/imgProfile"
                    android:text="BloodType\n(+0/-A)"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlue" />

                <EditText
                    android:id="@+id/txtbloodgroup"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tvfirstname"
                    android:layout_toRightOf="@+id/tvfirstname"
                    android:hint="Blood Group"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnUpdateHealthRecord"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/register_button_custom"
        android:fontFamily="monospace"
        android:text="UPDATE"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_marginLeft="10dp"
        />

    </RelativeLayout>


</LinearLayout>