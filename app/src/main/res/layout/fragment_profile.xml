<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSettings"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/tvSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:id="@+id/btnProfileView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfilee"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/noimage"/>

            <EditText
                android:id="@+id/txtfirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/imgProfilee"
                android:layout_toRightOf="@+id/imgProfilee"
                android:hint="First Name"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:editable="false"/>

            <EditText
                android:id="@+id/txtlastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_toEndOf="@+id/imgProfilee"
                android:layout_toRightOf="@+id/imgProfilee"
                android:hint="Last Name"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:editable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtfirstname"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="-35dp"
                android:layout_toEndOf="@+id/imgProfilee"
                android:hint="See your profile"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/imgProfilee" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="0dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15px"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2">




        <!--    <Button-->
<!--        android:id="@+id/btnlocation"-->
<!--        android:layout_width="300dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="My Current Location"-->
<!--        android:background="@drawable/settings_location"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_marginBottom="20dp"-->
<!--        android:textSize="25sp"-->
<!--        android:textColor="#fff"-->
<!--        android:layout_gravity="center_horizontal"/>-->



<!--    <Button-->
<!--        android:id="@+id/btnFeedback"-->
<!--        android:layout_width="300dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@drawable/settings_feedback"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_marginBottom="20dp"-->
<!--        android:textSize="25sp"-->
<!--        android:textColor="#fff"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:text="Feedback"/>-->

            <Button
                android:id="@+id/btnMyProfile"
                android:layout_width="190dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/settings_button_design"
                android:text="My Profile"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnlogout"
                android:layout_width="190dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/settings_button_design"
                android:text="Logout"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnFaq"
                android:layout_width="190dp"
                android:layout_height="85dp"
                android:background="@drawable/settings_button_design"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:text="FAQ"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/btnFeedback"
                android:layout_width="190dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/settings_button_design"
                android:text="Feedback"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />








        </GridLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>