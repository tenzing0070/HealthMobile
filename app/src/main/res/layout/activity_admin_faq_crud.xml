<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.FaqCrudActivity"
    android:background= "#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/imgAdminHome"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/homefragment"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:onClick="OpenAdminDashboard"
                />


            <TextView
                android:id="@+id/tvadddoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:text="Add FAQ"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imgAdminBack"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:onClick="OpenFaqDash"
                android:src="@drawable/adminback" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rrlayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:background="#000000"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/crud_faq_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:textColor="@color/colorBlack"
        android:textAllCaps="true"
        android:hint="Question"
        android:inputType="text"
       />

    <EditText
        android:id="@+id/crud_faq_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crud_faq_question"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:hint="Answer"
        android:inputType="textImeMultiLine"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/imgAdminDoctorProfile"/>

    <Button
        android:id="@+id/btnAddFaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crud_faq_answer"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:text="Add"
        android:textSize="25sp"
        android:background="@drawable/update_button_design"
        android:textColor="@color/colorWhite" />



</RelativeLayout>



