<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateAdminProfileActivity"
    android:background="@color/colorGrayLight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Admin"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/imgAdminBack"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/adminback"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="AdminDashOpen"
            />
    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/imgAdminPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/noimage" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvepfirstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firstname"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:textSize="13sp"
            android:paddingLeft="50dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/txtfirstname"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="First name"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@id/tvepfirstname"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:id="@+id/tveplastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lastname"
            android:textSize="13sp"
            android:textColor="@color/colorRed"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"/>

        <EditText
            android:id="@+id/txtlastname"
            android:layout_width="wrap_content"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@id/tveplastname"
            android:layout_marginLeft="300dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="#000000"
        android:layout_marginBottom="0dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvepotherinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Information"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvepaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="13sp"
            android:textColor="@color/colorRed"
            android:paddingLeft="50dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvepotherinfo"/>

        <EditText
            android:id="@+id/txtaddress"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/tvepaddress"
            android:layout_marginLeft="50dp"/>


        <TextView
            android:id="@+id/tvepgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="13sp"
            android:paddingLeft="50dp"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvepotherinfo"
            android:layout_marginLeft="140dp"/>

        <EditText
            android:id="@+id/txtgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:inputType="text"
            android:maxLength="15"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginLeft="190dp"
            android:layout_below="@id/tvepgender"/>

        <TextView
            android:id="@+id/tvepage"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvepotherinfo"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="211dp"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@+id/tvepaddress"
            android:paddingLeft="10dp"
            android:text="Age"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/txtage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"
            android:maxLength="3"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@id/tvepage"
            android:layout_marginLeft="320dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="#000000"
        android:layout_marginBottom="0dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvepcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvepphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="13sp"
            android:paddingLeft="50dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:layout_below="@+id/tvepcontact"/>

        <EditText
            android:id="@+id/txtphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="number"
            android:maxLength="15"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@id/tvepphone"
            android:layout_marginLeft="50dp"/>


        <TextView
            android:id="@+id/tvepemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvepcontact"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="6dp"
            android:textColor="@color/colorRed"
            android:layout_toRightOf="@+id/tvepphone"
            android:paddingLeft="10dp"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/txtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@id/tvepemail"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="#000000"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/tvepinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvdownepusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:paddingLeft="10dp"/>

<!--        <TextView-->
